<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:local="clr-namespace:FormsPerformancePlayground;assembly=FormsPerformancePlayground" 		
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="FormsPerformancePlayground.MainPage"
        BindingContext="{x:Static local:ViewModelLocator.MainPageViewModel}"
		>
    <ContentPage.Content>
	    <StackLayout>
            <Button Text="Understanding GridLayout" Command="{Binding GridTapped}"/>
            <Button Text="Understanding StackLayout" Command="{Binding StackTapped}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
